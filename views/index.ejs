<%- include('header'); -%>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4 col-2"></div>
        <div class="col-md-4 col-8 justify-content-center text-center">
            <h1>WELCOME TO FOUR ACES!</h1>
            <p>We provide high quality decks of playing cards.</p>
        </div>
        <div class="col-md-4 col-2"></div>
    </div>
    <div class="row">
        <div class="col-md-4 col-2"></div>
        <div class="col-md-4 col-8">
            <div id="slideshow" class="carousel slide" data-bs-ride="carousel" data-bs-ride="20000">

                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="images/aces_red.jpg" class="img-fluid d-block w-100" width="480px" height= "480px" alt="Aces Red">
                        <div class="carousel-caption">
                            <h5>Aces Red</h5>
                            <p>Our signature products. Who doesn't want Aces?</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="images/bicycle.jpg" class="img-fluid d-block w-100" width="480px" height= "480px" alt="Bicycle">
                        <div class="carousel-caption">
                            <h5>Bicycle</h5>
                            <p>A classic deck. Fit all purposes.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="images/ept.jpg" class="img-fluid d-block w-100" width="480px" height= "480px" alt="EPT">
                        <div class="carousel-caption">
                            <h5>EPT</h5>
                            <p>Standard deck for tournaments.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="images/lotr.jpg" class="img-fluid d-block w-100" width="480px" height= "480px" alt="LOTR">
                        <div class="carousel-caption">
                            <h5>Lord of the Rings</h5>
                            <p>One hand to win them all.</p>
                        </div>
                    </div>
                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#slideshow" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#slideshow" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>
            </div>
        </div>
        <div class="col-md-4 col-2"></div>
    </div>
</div>

<%- include('footer'); -%>
